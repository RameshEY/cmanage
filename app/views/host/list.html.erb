<table class="table table-hover">
<!-- On rows -->
<th> Name</th>
<th> Author</th>
<th>status</th>
<th>Date</th>
<th>Edit</th>

<!-- On cells (`td` or `th`) -->
<% @hosts.each do |host| %>
<tr>
  <td ><%= host.name %></td>
  <td ><%= host.ip %></td>
  <td >Completed</td>
  <td ><%= host.created_at %></td>
 
  <td>
          <div class="btn-group">
          <button data-toggle="dropdown" class="settings-button dropdown-toggle"> <%#=image_tag("settings.png" ,alt: "settings Image") %> </button>
            <ul class="dropdown">
                <li><%= link_to 'Edit', edit_host_path(host) %></li>
                <li><%= link_to 'Delete', host, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                <li><%= link_to 'asdasd', host %></li>
                <li><a href="#myModal" role="button" class="btn btn-large btn-primary" data-toggle="modal">Edit Host</a></li>
            </ul>
          </div>
  </td>
 </tr>
  <% end %>
</table>

  

 
