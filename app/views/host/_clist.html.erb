<table class="table table-hover">
<!-- On rows -->
<th> Name</th>
<!-- <th> Container ID</th> -->
<th>Status</th>
<th>Image Name</th> 
<th>Edit</th>

<!-- On cells (`td` or `th`) -->
<% @host.containers.each do |container| %>
<tr>
<% cname = container.name %>
<% trim = cname.slice!(0..7) %>
  <td ><%= cname.chomp[0...-1] %></td>
  <!-- <td ><%= container.c_id %></td> -->
  <td ><%= container.status %></td>
  <td ><%= container.image %></td>
 
  <td>
            
      <div class="btn-group">
        <button data-toggle="dropdown" class="settings-button dropdown-toggle"> <%=image_tag("settings.png" ,alt: "settings Image") %> </button>
          <ul class="dropdown-menu">
            
            <li><%= link_to 'View', docker_path(:id => container.id) %></li>
               
           
            <li> <a href="#myModal" role="button"  data-toggle="modal">Launch Demo Modal</a></li>
          </ul>
      </div>
  </td>
 </tr>
  <% end %>
</table>




