<table class="table table-hover">
<!-- On rows -->
<th> Name</th>
<th> IP</th>
<th>status</th>
<th>Date Created</th>
<th>Edit</th>

<!-- On cells (`td` or `th`) -->
<% @hosts.each do |host| %>
<tr>
  <td ><%= host.name %></td>
  <td ><%= host.ip %></td>
  <td >Running</td>
  <td ><%= host.created_at %></td>
 
  <td>
          <div class="btn-group">
          <button data-toggle="dropdown" class="settings-button dropdown-toggle"> <%=image_tag("settings.png" ,alt: "settings Image") %> </button>
            <ul class="dropdown-menu">
                <li><%= link_to 'Edit', edit_host_path(host) %></li>
                <li><%= link_to 'Delete', host, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                <li><%= link_to 'View', host %></li>
            </ul>
          </div>
  </td>
 </tr>
  <% end %>
</table>

<%= render :partial => 'edit_host' %>


